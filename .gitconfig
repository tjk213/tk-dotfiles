[alias]
        co = checkout
        stat = status
        st = status -uno
        ci = commit
        stasharoo = stash
        push-current-branch = push origin HEAD

## NB: git now has an `includeIf` function which we could potentially leverage to
## control git emails via repo location (e.g. ~/workspace --> tyler@modular.com).
## This would, I think, give us everything we need to eliminate the modular branch
## and get everything to co-exist in master.
[user]
	email = tyler@modular.com
	name = Tyler J. Kenney
[core]
	excludesFile = ~/.gitignore
[pull]
	ff = only

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
